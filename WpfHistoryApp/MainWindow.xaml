<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вариант 2: Вычитание" Height="500" Width="400">
    <StackPanel Margin="15">
        <!-- Поля ввода -->
        <TextBlock Text="Число A:"/>
        <TextBox x:Name="txtA" Margin="0,5,0,10"/>

        <TextBlock Text="Число B:"/>
        <TextBox x:Name="txtB" Margin="0,5,0,10"/>

        <!-- Кнопка расчета -->
        <Button x:Name="btnCalc" Content="Рассчитать (A - B)" 
                Click="btnCalc_Click" Height="30" Background="LightGreen"/>

        <!-- Результат -->
        <TextBlock x:Name="txtResult" Text="Результат: " Margin="0,15" 
                   FontSize="18" HorizontalAlignment="Center" FontWeight="Bold"/>

        <Separator/>

        <!-- Управление историей -->
        <Button x:Name="btnHistory" Content="Показать историю" 
                Click="btnHistory_Click" Margin="0,10"/>

        <!-- Таблица истории (DataGrid) -->
        <DataGrid x:Name="dgHistory" Height="180" AutoGenerateColumns="False" 
                  Visibility="Collapsed" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Число A" Binding="{Binding NumA}" Width="*"/>
                <DataGridTextColumn Header="Число B" Binding="{Binding NumB}" Width="*"/>
                <DataGridTextColumn Header="Результат" Binding="{Binding Result}" Width="*"/>
                <DataGridTextColumn Header="Время" Binding="{Binding Time}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</Window>